<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Pantry</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to My Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add New Item</a>

    <h2>Pantry:</h2>
    <div class="pantry-container">
        <% if (pantry.length === 0) { %>
            <p>There are no items in this pantry.</p>
        <% } else { %>
            <ul>
            <% pantry.forEach((item) => { %>
                <li><%= item.name %></li>
                <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit this Item</a>
                <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST">
                    <button class="delete-button" type="submit">Delete this Item</button>
                </form>
                <br>
            <% }) %>
            </ul>
        <% } %>
    </div>
</body>
</html>